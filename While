/*

Trouver la somme des chiffres de 1 à 1000
*/

public class While {

    public static void main(String[] args) {
        
        //Données d'entrée
        int num = 1000, i = 1, sum = 0;
        
        //Conditions    
        while(i <= num)
        {
            sum += i;
            i++;

        }
        
        //Données de sortie
        System.out.println("Somme = " + sum);
    }
}
